<p id="notice"><%= notice %></p>

<h1>Listing Community Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @community_groups.each do |community_group| %>
      <tr>
        <td><%= community_group.name %></td>
        <td><%= link_to 'Show', community_group %></td>
        <td><%= link_to 'Edit', edit_community_group_path(community_group) %></td>
        <td><%= link_to 'Destroy', community_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

